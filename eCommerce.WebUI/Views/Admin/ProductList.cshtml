@model IEnumerable<eCommerce.Model.Product>

@{
    ViewBag.Title = "Gestion des Produits - OCP Sales Portal";
}

<h2 style="color: var(--ocp-green);">Gestion des Produits</h2>

<p>
    <a href="@Url.Action("CreateProduct")" class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i> Créer un nouveau produit
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Statut</th>
                <th>Actions</th>
    </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
    <tr>
        <td>
                        <strong>@item.Description</strong>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <br /><small class="text-muted">Image: @item.ImageUrl</small>
                        }
                    </td>
                    <td>
                        @if (item.Category != null && !string.IsNullOrEmpty(item.Category.Name))
                        {
                            <span class="label label-info">@item.Category.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">Aucune catégorie</span>
                        }
        </td>
        <td>
                        <strong>@item.Price.ToString("C")</strong>
                        @if (item.CostPrice > 0)
                        {
                            <br /><small class="text-muted">Coût: @item.CostPrice.ToString("C")</small>
                        }
        </td>
        <td>
                        @if (item.StockQuantity > 0)
                        {
                            <span class="text-success">
                                <i class="glyphicon glyphicon-ok"></i> @item.StockQuantity
                                @if (!string.IsNullOrEmpty(item.UnitOfMeasure))
                                {
                                    <span>@item.UnitOfMeasure</span>
                                }
                            </span>
                        }
                        else
                        {
                            <span class="text-danger">
                                <i class="glyphicon glyphicon-remove"></i> Rupture
                            </span>
                        }
        </td>
        <td>
                        @if (item.IsActive)
                        {
                            <span class="label label-success">Actif</span>
                        }
                        else
                        {
                            <span class="label label-danger">Inactif</span>
                        }
        </td>
        <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("EditProduct", new { id = item.ProductId })" 
                               class="btn btn-primary btn-sm" title="Modifier">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" 
                               class="btn btn-info btn-sm" title="Voir détails" target="_blank">
                                <i class="glyphicon glyphicon-eye-open"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.ProductId })" 
                               class="btn btn-danger btn-sm" title="Supprimer"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </div>
        </td>
    </tr>
}
        </tbody>
</table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Aucun produit trouvé</h4>
        <p>Commencez par créer votre premier produit en cliquant sur "Créer un nouveau produit".</p>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-default">
        <i class="glyphicon glyphicon-arrow-left"></i> Retour à l'administration
    </a>
</div>
