@model eCommerce.Model.Product

@{
    ViewBag.Title = Model.Description + " - OCP Sales Portal";
}

<div class="row">
    <div class="col-md-6">
        <!-- Image du produit -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content("~/Images/" + Model.ImageUrl)" alt="@Model.Description" 
                 class="img-responsive" style="max-height: 400px; width: 100%; object-fit: cover;" />
        }
        else
        {
            <img src="@Url.Content("~/Images/sample_product.jpg")" alt="@Model.Description" 
                 class="img-responsive" style="max-height: 400px; width: 100%; object-fit: cover;" />
        }
    </div>
    
    <div class="col-md-6">
        <!-- Informations du produit -->
        <h1 style="color: var(--ocp-green); margin-bottom: 20px;">@Model.Description</h1>
        
        @if (Model.Category != null)
        {
            <p>
                <span class="label label-info" style="font-size: 14px;">@Model.Category.Name</span>
            </p>
        }
        
        <div class="well" style="background-color: var(--ocp-light-gray);">
            <h3 style="color: var(--ocp-blue); margin-top: 0;">
                Prix : @Model.Price.ToString("C")
            </h3>
            
            @if (Model.StockQuantity > 0)
            {
                <p class="text-success">
                    <i class="glyphicon glyphicon-ok"></i> 
                    <strong>En stock :</strong> @Model.StockQuantity @Model.UnitOfMeasure
                </p>
            }
            else
            {
                <p class="text-danger">
                    <i class="glyphicon glyphicon-remove"></i> 
                    <strong>Rupture de stock</strong>
                </p>
            }
            
            @if (!string.IsNullOrEmpty(Model.TechnicalSpecs))
            {
                <p>
                    <strong>Spécifications techniques :</strong><br />
                    @Model.TechnicalSpecs
                </p>
            }
        </div>
        
        <!-- Actions -->
        <div class="btn-group-vertical" style="width: 100%; margin-top: 20px;">
            @if (Model.StockQuantity > 0)
            {
                <a href="@Url.Action("AddToBasket", "Basket", new { id = Model.ProductId })" 
                   class="btn btn-success btn-lg">
                    <i class="glyphicon glyphicon-shopping-cart"></i> Ajouter au panier
                </a>
            }
            <a href="@Url.Action("Index", "Products")" class="btn btn-default">
                <i class="glyphicon glyphicon-arrow-left"></i> Retour au catalogue
            </a>
        </div>
    </div>
</div>

<!-- Fiche technique détaillée -->
@if (!string.IsNullOrEmpty(Model.TechnicalSpecs))
{
    <div class="row" style="margin-top: 40px;">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color: var(--ocp-blue); color: white;">
                    <h3 class="panel-title">
                        <i class="glyphicon glyphicon-file"></i> Fiche Technique
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>Spécifications détaillées</h4>
                            <p style="white-space: pre-line;">@Model.TechnicalSpecs</p>
                        </div>
                        <div class="col-md-4">
                            <div class="well">
                                <h5>Informations produit</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Référence :</strong> @Model.ProductId</li>
                                    @if (Model.Category != null)
                                    {
                                        <li><strong>Catégorie :</strong> @Model.Category.Name</li>
                                    }
                                    <li><strong>Prix :</strong> @Model.Price.ToString("C")</li>
                                    <li><strong>Stock :</strong> @Model.StockQuantity @Model.UnitOfMeasure</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Produits similaires -->
@if (Model.Category != null)
{
    <div class="row" style="margin-top: 40px;">
        <div class="col-md-12">
            <h3 style="color: var(--ocp-green);">Produits similaires dans @Model.Category.Name</h3>
            <div class="row">
                @{
                    var similarProducts = ViewBag.SimilarProducts as IEnumerable<eCommerce.Model.Product> ?? new List<eCommerce.Model.Product>();
                }
                @foreach (var product in similarProducts.Take(3))
                {
                    <div class="col-md-4">
                        <div class="thumbnail" style="border: 1px solid #ddd; padding: 10px;">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@Url.Content("~/Images/" + product.ImageUrl)" alt="@product.Description" 
                                     style="width: 100%; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Images/sample_product.jpg")" alt="@product.Description" 
                                     style="width: 100%; height: 150px; object-fit: cover;" />
                            }
                            <div class="caption">
                                <h5>@product.Description</h5>
                                <p class="text-muted">@product.Price.ToString("C")</p>
                                <a href="@Url.Action("Details", new { id = product.ProductId })" 
                                   class="btn btn-primary btn-sm">Voir détails</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
} 